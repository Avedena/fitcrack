#
# Make a copy of this file, rename it to .env
# Set the variables according to your preferences
#

############################# NETWORK CONFIGURATION ##############################
FITCRACK_SERVER_HOST="localhost"       # The IP or domain name of Fitcrack server

WEBADMIN_HOST=${FITCRACK_SERVER_HOST}  # Hostname for Fitcrack WebAdmin
SSL_WEBADMIN='n'                       # SSL state of WebAdmin: 'y' or 'n'
WEBADMIN_PROTO=http                    # http or https (if SSL_WEBADMIN='y')
BACKEND_PORT=5000                      # Port for WebAdmin backend (5443 for SSL)
FRONTEND_PORT=80                       # Port for WebAdmin frontend (443 for SSL)

BOINC_HOST=${FITCRACK_SERVER_HOST}     # BOINC server IP
SSL_BOINC='n'                          # SSL state of BOINC server: 'y' or 'n'
BOINC_PROTO=http                       # http or https (if SSL_BOINC='y')
BOINC_PORT=80                          # BOINC server port (443 for SSL)

# NOTE: It is completely OK when BOINC server and WebAdmin frontend run on
#       the same port. The BOINC server uses http(s)://HOST/fitcrack* aliases.
#       To use different ports, also modify the mapping in docker-compose.yml

SSL_CERTIFICATE_FILE="fullchain.pem"  # Public key for your domain (if SSL is on)
SSL_CERTIFICATE_KEYFILE="privkey.pem" # Private key for your domain (if SSL is on)

# NOTE: SSL keys should be copied into 'fitcrack-data/certificates' directory
#       Certificates are only loaded if SSL_WEBADMIN='y' or SSL_BOINC='y'

##################################################################################

############################# DATABASE CONFIGURATION #############################
FITCRACK_DB_HOST="localhost"          # MySQL server hostname
FITCRACK_DB_USER="fitcrack"           # MySQL server username
FITCRACK_DB_PW="mysqlPASSWORD"        # MySQL server password
FITCRACK_DB_NAME="fitcrack"           # MySQL server database name
##################################################################################

################################ WEBADMIN ACCESS #################################
WEBADMIN_LOGIN="fitcrack"             # Default WebAdmin (and _ops) login
WEBADMIN_PW="FITCRACK"                # Default WebAdmin (and _ops) password
WEBADMIN_EMAIL="me@fitcrack.cz"       # Default WebAdmin user email
##################################################################################

# Advanced =======================================================================

DYNAMIC_BACKEND_URL='y' # Disable if you want to run FE on different hostname
# When enabled, allows accessing webadmin both via IP and via domain name
